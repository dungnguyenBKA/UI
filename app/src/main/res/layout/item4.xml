<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="80dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/number_toon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/nunito_sans"
            android:textColor="#FF002E"
            android:textSize="20sp" />
    </RelativeLayout>


    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/logo_toon"
        android:layout_width="60dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintStart_toEndOf="@+id/number"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotoon"
        android:layout_height="80dp" />



    <TextView
        android:id="@+id/name_toon"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textBlack"
        app:layout_constraintStart_toEndOf="@+id/logo_toon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#8A8A8F"
        android:background="@drawable/bggray"
        android:id="@+id/slug_toon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito_sans"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:text="@string/slug"
        app:layout_constraintStart_toEndOf="@+id/logo_toon"
        app:layout_constraintTop_toBottomOf="@+id/name_toon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/vote"
        app:layout_constraintStart_toEndOf="@+id/logo_toon"
        app:layout_constraintTop_toBottomOf="@+id/slug_toon" />
</androidx.constraintlayout.widget.ConstraintLayout>